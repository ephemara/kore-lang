    let payload = "{\"name\": \"KAIN\", \"type\": \"Language\", \"status\": \"Enterprise\"}"
    
    let post_resp = http_post_json(post_url, payload)
    println("POST Response received!")
    # Just show the start of it
    if len(post_resp) > 100:
        println(substring(post_resp, 0, 100) + "...")
    else:
        println(post_resp)
        
