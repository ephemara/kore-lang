# kore - File I/O, Strings, and Utilities Demo

println!("=== kore Standard Library Demo ===")
println!()

# ==========================================
# FILE I/O
# ==========================================

println!("--- File I/O ---")

# Write a file
let result = write_file("test_output.txt", "Hello from kore!\nLine 2\nLine 3")
println!("write_file result: ", result)

# Check if file exists
let exists = file_exists("test_output.txt")
println!("file_exists: ", exists)

# Read the file back
let content = read_file("test_output.txt")
println!("read_file: ", content)

# Read as lines
let lines = read_lines("test_output.txt")
println!("read_lines: ", lines)

println!()

# ==========================================
# STRING FUNCTIONS
# ==========================================

println!("--- String Functions ---")

let text = "  Hello, GODCODE World!  "

println!("Original: '", text, "'")
println!("trim: '", trim(text), "'")
println!("upper: '", upper(trim(text)), "'")
println!("lower: '", lower(trim(text)), "'")

let words = split("one,two,three,four", ",")
println!("split: ", words)

let joined = join(words, " - ")
println!("join: ", joined)

println!("contains 'GODCODE': ", contains(text, "GODCODE"))
println!("contains 'Python': ", contains(text, "Python"))

println!("starts_with '  Hello': ", starts_with(text, "  Hello"))
println!("ends_with '!  ': ", ends_with(text, "!  "))

let replaced = replace(text, "GODCODE", "Amazing")
println!("replace: '", replaced, "'")

println!("char_at(8): ", char_at(trim(text), 7))  # 'G'
println!("substring(0, 5): '", substring(trim(text), 0, 5), "'")

# Array contains
let nums = [1, 2, 3, 4, 5]
println!("array contains 3: ", contains(nums, 3))
println!("array contains 10: ", contains(nums, 10))

println!()

# ==========================================
# TYPE CONVERSION
# ==========================================

println!("--- Type Conversion ---")

println!("int('42'): ", int("42"))
println!("int(3.14): ", int(3.14))
println!("int(true): ", int(true))

println!("float('3.14'): ", float("3.14"))
println!("float(42): ", float(42))

println!("str(42): '", str(42), "'")
println!("str(true): '", str(true), "'")

println!("bool(0): ", bool(0))
println!("bool(1): ", bool(1))
println!("bool(''): ", bool(""))
println!("bool('hello'): ", bool("hello"))
println!("bool([]): ", bool([]))
println!("bool([1]): ", bool([1]))

println!()

