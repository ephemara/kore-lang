fn print_pyramid(height: Int):
    println(" PYRAMID (height = " + str(height) + ")")
    println("")
    for i in range(1, height + 1):
        // Print spaces
        let spaces = ""
        for s in range(0, height - i):
            spaces = spaces + " "
        // Print stars
        let stars = ""
        for j in range(0, 2 * i - 1):
            stars = stars + "*"
        println(spaces + stars)
    println("")

fn print_diamond(size: Int):
    println(" DIAMOND (size = " + str(size) + ")")
    println("")
    // Top half
    for i in range(1, size + 1):
        let spaces = ""
        for s in range(0, size - i):
            spaces = spaces + " "
        let stars = ""
        for j in range(0, 2 * i - 1):
            stars = stars + "◆"
        println(spaces + stars)
    // Bottom half
    for i in range(size - 1, 0):
        let spaces = ""
        for s in range(0, size - i):
            spaces = spaces + " "
        let stars = ""
        for j in range(0, 2 * i - 1):
            stars = stars + "◆"
        println(spaces + stars)
    println("")

fn print_wave():
    println(" WAVE PATTERN")
    println("")
    let wave_chars = [".", "o", "O", "o", ".", " ", " "]
    for row in range(0, 5):
        let line = ""
        for col in range(0, 50):
            let idx = (col + row) % 7
            // Simple wave
            if idx == 0:
                line = line + "."
            if idx == 1:
                line = line + "o"
            if idx == 2:
                line = line + "O"
            if idx == 3:
                line = line + "o"
            if idx == 4:
                line = line + "."
            if idx == 5:
                line = line + " "
            if idx == 6:
                line = line + " "
        println(line)
    println("")

