fn count_to_ten():
    println(" COUNTING (pure Kain loop)")
    println("")
    for i in range(1, 11):
        let bar = ""
        for j in range(0, i):
            bar = bar + "█"
        println("  " + str(i) + " " + bar)
    println("")

fn fibonacci(n: Int):
    println(" FIBONACCI SEQUENCE (first " + str(n) + " numbers)")
    println("")
    let a = 0
    let b = 1
    let line = ""
    for i in range(0, n):
        line = line + str(a) + " "
        let temp = a + b
        a = b
        b = temp
    println("  " + line)
    println("")

