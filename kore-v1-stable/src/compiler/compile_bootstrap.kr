// Run this with: cargo run -- run src/compiler/compile_bootstrap.kr
// It will generate all the Rust files for korec.exe

use compiler/lexer
use compiler/parser  
use compiler/codegen_rust

fn compile_to_rust(source_path: String, output_path: String) -> Bool:
    println("  [" + source_path + "] -> [" + output_path + "]")
    
    let source = read_file(source_path)
    if len(source) == 0:
        println("    ERROR: Could not read file")
        return false
    println("    Read " + str(len(source)) + " bytes")
    
    let lex = Lexer::new(source)
    let tokens = lex.tokenize()
    println("    Tokenized: " + str(len(tokens)) + " tokens")
    
    let parser = Parser::new(tokens)
    let program = parser.parse_program()
    println("    Parsed: " + str(len(program.items)) + " items")
    
    let gen = RustGen::new()
    let rust = gen.gen_program(program)
    println("    Generated: " + str(len(rust)) + " chars of Rust")
    
    write_file(output_path, rust)
    println("     Written!")
    return true

fn main():
    println("================================================")
    println(" KORE FULL BOOTSTRAP GENERATOR ")
    println("Project Ouroboros - The Snake Eats Its Tail")
    println("================================================")
    println("")
    
    // Compile each compiler component
    println("[1/4] Compiling lexer.kr...")
    compile_to_rust("src/compiler/lexer.kr", "output_bootstrap/src/compiler/lexer.rs")
    
    println("")
    println("[2/4] Compiling parser.kr...")
    compile_to_rust("src/compiler/parser.kr", "output_bootstrap/src/compiler/parser.rs")
    
    println("")
    println("[3/4] Compiling codegen.kr...")
    compile_to_rust("src/compiler/codegen.kr", "output_bootstrap/src/compiler/codegen.rs")
    
    println("")
    println("[4/4] Compiling codegen_rust.kr...")
    compile_to_rust("src/compiler/codegen_rust.kr", "output_bootstrap/src/compiler/codegen_rust.rs")
    
    println("")
    println("================================================")
    println(" BOOTSTRAP GENERATION COMPLETE! ")
    println("================================================")
